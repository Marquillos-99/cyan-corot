---
const { svgPath, title, description } = Astro.props;
---

<div class="flex-shrink-0 w-80 bg-white rounded-2xl shadow-lg p-6 card">
  <div class="flex justify-center mb-4">
    <!-- Usa el SVGPath pasado como propiedad -->
    <svg
      class="w-16 h-16 text-emerald-700"
      fill="currentColor"
      viewBox="0 0 24 24"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path d={svgPath}></path>
    </svg>
  </div>
  <h3 class="text-xl font-semibold text-center mb-3">{title}</h3>
  <p class="text-gray-600 text-center">
    {description}
  </p>
</div>
