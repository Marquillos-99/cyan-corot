---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main
    class="min-h-screen flex flex-col items-center justify-center bg-white py-16"
  >
    <section
      class="w-full max-w-2xl mx-auto bg-gray-50 rounded-2xl shadow-lg p-8 text-gray-800 flex flex-col items-center"
    >
      <iframe
        src="https://ee.kobotoolbox.org/i/kBznmfsY"
        width="100%"
        height="600"
        class="rounded-xl border mb-8"
        allowfullscreen></iframe>
      <div id="gracias" class="hidden flex-col items-center justify-center">
        <p class="text-lg font-semibold text-emerald-700 mb-4">
          ¡Gracias por tu contribución!
        </p>
        <a
          href="/"
          class="bg-emerald-700 text-white px-6 py-2 rounded-full shadow hover:bg-emerald-800 transition"
          >Volver al inicio</a
        >
      </div>
    </section>
  </main>
</Layout>
